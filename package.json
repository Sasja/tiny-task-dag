{
  "name": "tiny-task-dag",
  "version": "1.0.2",
  "description": "Minimal (~200 LOC) TypeScript library for building async computation DAGs with typed error handling",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "src/**/*.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "task",
    "dag",
    "async",
    "pipeline",
    "result",
    "typescript",
    "error-handling",
    "computation-graph"
  ],
  "author": "sasja",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sasja/tiny-task-dag.git"
  },
  "bugs": {
    "url": "https://github.com/Sasja/tiny-task-dag/issues"
  },
  "homepage": "https://github.com/Sasja/tiny-task-dag#readme",
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  }
}
